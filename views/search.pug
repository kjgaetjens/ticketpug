html
    head
        link(rel='stylesheet', href='./css/events.css', type='text/css')
    body
        include includes/navigation
        .top-banner
            h1 Search Results
            h2 "#{result}"
            .search-div
                form(method="GET" action="/search")
                    input(
                        type='text'
                        name='eventSearch'
                        placeholder='New search...'
                    )
                    button submit
        .bottom-container
            each val in event
                .search-result-div
                    .date-div
                        p.date #{val.dates.start.localDate}
                        p.time #{val.dates.start.localTime}
                    .event-info-div
                        h3 #{val.name}
                        p #{val._embedded.venues[0].name}
                        span #{val.info}
                    .info-btn: a(href=`../concert-tickets/eventinfo/${val.id}`) More info
            
    include includes/footer           
            
