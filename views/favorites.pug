extends userLayout.pug

block topMenu
    include includes/navigation
block topContent

    .topContainer
        h1.settingTitle Favorites    
    ul(class="accountMenu" id="accountMenu")
        a.firstLink(href="/account") Settings
        a(href="/account/history") History
        a(href="/account/favorites" class="active") Favorites
        a(href="/account/payment") Payment
        a(href="javascript:void(0);" class="menuIcon" onclick="myFunction()")
            i(class="fa fa-bars")



block bottomContent
    .profile
        .favoriteDiv
            h2 Favorites
            each favorite in favorites
                .favoriteDisplay
                    form(action='/account/delete-favorite' class="formClass" method='post')
                    
                        
                        h3 #{favorite.event_name}
                        p Event Date: #{favorite.event_date}
                        if favorite.venue_name == 'undefined'
                            p.noEvents No venue assigned
                        else
                            p Venue Name: #{favorite.venue_name}
                            a(href=`../concert-tickets/eventinfo/${favorite.event_id}`) Get more info
                        input(type="hidden" name="event_id" value=`${favorite.event_id}`)
                        button(type='submit' class='delete-button')
                            i(class='fa fa-trash-o fa-2x')


block script
    script(src="/js/menuToggle.js")
        
