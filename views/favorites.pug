extends userLayout.pug

block topMenu
    include includes/navigation
block topContent

    .topContainer
        h1.settingTitle Favorites    
    ul.accountMenu
        a.firstLink(href="/account") Settings
        a(href="/account/history") History
        a(href="/account/favorites") Favorites
        a(href="/account/payment") Payment





block bottomContent
    .profile
        .favoriteDiv
            h2 Favorites
            each favorite in favorites
                .favoriteDisplay
                    form(action='/account/delete-favorite' method='post')
                    
                        i(class='fa fa-heart' style={color: 'red'})
                        p #{favorite.event_name}
                        p Event Date: #{favorite.event_date}
                        p Venue Name: #{favorite.venue_name}
                        input(type="hidden" name="event_id" value=`${favorite.event_id}`)
                        button(type='submit' class='delete-button')
                            i(class='fa fa-trash-o')

    